
<style>
    /* Área das mensagens */
.grid-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

/* Base comum */
.msg-success,
.msg-danger {
  width: 100%;
  max-width: 380px;
  padding: 12px 16px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  animation: fadeIn 0.4s ease-in-out;
}

/* Mensagem de sucesso */
.msg-success {
  background: #e6f7ee;
  color: #1e7e34;
  border: 1px solid #b7ebc6;
}

/* Mensagem de erro */
.msg-danger {
  background: #fdecea;
  color: #b02a37;
  border: 1px solid #f5c2c7;
}

/* Animação suave */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-6px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

</style>

<section class="grid-section">

{{#if success_msg}}
<span class="msg-success">{{success_msg}}</span>
{{/if}}

{{#if error}}
<span class="msg-danger">{{error}}</span>
{{/if}}
{{#if error_msg}}
<span class="msg-danger">{{error_msg}}</span>
{{/if}}
</section>